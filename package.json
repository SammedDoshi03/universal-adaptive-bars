{
  "name": "universal-adaptive-bars",
  "private": false,
  "version": "0.0.2",
  "description": "A highly customizable smart bar chart for React and React Native",
  "author": "Sammed Doshi <Sammeddoshi03.sd@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/SammedDoshi03/universal-adaptive-bars.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/smart-bar-chart.umd.cjs",
  "module": "./dist/smart-bar-chart.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/smart-bar-chart.js",
      "require": "./dist/smart-bar-chart.umd.cjs"
    },
    "./native": {
      "import": "./src/lib/native.ts"
    }
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "clsx": "^2.1.1",
    "d3-scale": "^4.0.2",
    "date-fns": "^4.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react-native": "*",
    "react-native-svg": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/d3-scale": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-native": "^0.72.8",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "react-native-svg": "^15.15.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  }
}